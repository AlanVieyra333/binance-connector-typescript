{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "./.build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": [
            "jest"
        ],
        "resolveJsonModule": true,
    },
    "files": [
        "./src/index.ts",
        "./src/types.ts"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*",
        "../test/changes/trade_first.ts"
    ],
    "exclude": [
        "node_modules",
    ],
}